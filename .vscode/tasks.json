{
	"version": "2.0.0",
	"inputs": [
		{
			"id": "example",
			"type": "pickString",
			"description": "Select ServoDAC example to compile",
			"options": [
				"input_follower",
				"sinewave"
			]
		}
	],
	"tasks": [
		{
			"label": "arduino: compile example",
			"type": "shell",
			"command": "${env:ARDUINO_BIN}/arduino-cli",
			"args": [
				"compile",
				"--verbose",
				"--libraries",
				"${env:ARDUINO_LIB}",
				"--fqbn",
				"arduino:avr:nano:cpu=atmega328",
				"${workspaceFolder}/examples/${input:example}"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			],
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			}
		}
	]
}